
@{
    ViewBag.Title = "Menu";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Restaurant Menu</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Amatic+SC">
    <style>
        body,
        html {
            height: 100%;
        }

        body,
        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            font-family: "Tempus Sans ITC", sans-serif;
        }

        .menu {
            display: none;
        }

        .bgimg {
            background-repeat: no-repeat;
            background-size: cover;
            background-image: url("https://www.w3schools.com/w3images/pizza.jpg");
            min-height: 90%;
        }
    </style>
</head>
<body>


    <!-- Header with image -->
    <header class="bgimg w3-display-container w3-grayscale-min" id="home">
        <div class="w3-display-bottomleft w3-padding">
            <span class="w3-tag w3-xlarge">Open from 10am to 12pm</span>
        </div>
     
    </header>

    <!-- Menu Container -->
    <div class="w3-container w3-black w3-padding-64 w3-xxlarge" id="menu">
        <div class="w3-content">

            <h1 class="w3-center w3-jumbo" style="margin-bottom:64px">THE MENU</h1>
            <div class="w3-row w3-center w3-border w3-border-dark-grey">
                <a href="javascript:void(0)" onclick="openMenu(event, 'Pizza');" id="myLink">
                    <div class="w3-col s4 tablink w3-padding-large w3-hover-red">Pizza</div>
                </a>
                <a href="javascript:void(0)" onclick="openMenu(event, 'Pasta');">
                    <div class="w3-col s4 tablink w3-padding-large w3-hover-red">Salads</div>
                </a>
                <a href="javascript:void(0)" onclick="openMenu(event, 'Starter');">
                    <div class="w3-col s4 tablink w3-padding-large w3-hover-red">Starter</div>
                </a>
            </div>

            <div id="Pizza" class="w3-container menu w3-padding-32 w3-white">
                <h1><b>Margherita</b> <span class="w3-right w3-tag w3-dark-grey w3-round">$12.50</span></h1>
                <p class="w3-text-grey">Fresh tomatoes, fresh mozzarella, fresh basil</p>
                <hr>
                <h1><b>Pepperoni</b> <span class="w3-right w3-tag w3-dark-grey w3-round">$14.50</span></h1>
                <p class="w3-text-grey">Pepperoni, mozzarella, tomato sauce</p>
                <hr>

                <h1><b>Hawaiian</b> <span class="w3-right w3-tag w3-dark-grey w3-round">$15.50</span></h1>
                <p class="w3-text-grey">Ham, pineapple, mozzarella, tomato sauce</p>
                <hr>


            </div>

            <div id="Salad" class="w3-container menu w3-padding-32 w3-white" style="display:none;">
                <h1><b>Ceasar Salad</b> <span class="w3-right w3-tag w3-dark-grey w3-round">$8.00</span></h1>
                <p class="w3-text-grey">Romaine lettuce, croutons, parmesan cheese, Caesar dressing</p>
                <hr>

                <h1><b>Greek Salad</b> <span class="w3-right w3-tag w3-dark-grey w3-round">$8.00</span></h1>
                <p class="w3-text-grey">Lettuce, tomatoes, cucumbers, red onions, feta cheese, olives, Greek dressing</p>
                <hr>

            </div>
        </div>
        <div id="Starter" class="w3-container menu w3-padding-32 w3-white" style="display:none;">
            <h1><b>Seafood Platter</b> <span class="w3-right w3-tag w3-dark-grey w3-round">$15.00</span></h1>
            <p class="w3-text-grey">Assorted seafood including shrimp, crab, and calamari served with dipping sauces</p>
            <hr>

            <h1><b>Grilled Shrimp Skewers</b> <span class="w3-right w3-tag w3-dark-grey w3-round">$15.00</span></h1>
            <p class="w3-text-grey">Juicy shrimp skewers marinated and grilled to perfection</p>
            <hr>

            <!-- Add more seafood starters here -->

        </div>

        <script>
    function openMenu(evt, menuName) {
                var i, x, tablinks;
                x = document.getElementsByClassName("menu");
                for (i = 0; i < x.length; i++) {
                    x[i].style.display = "none";
                }
                tablinks = document.getElementsByClassName("tablink");
                for (i = 0; i < x.length; i++) {
                    tablinks[i].className = tablinks[i].className.replace(" w3-red", "");
                }
                document.getElementById(menuName).style.display = "block";
                evt.currentTarget.className += " w3-red";
            }</script>
</div>
</body>
</html>
